<div class="form-group bundle-group clearfix" data-bundleType="multi-bundle-url">

    <div class="left-container">

        <input type="text" value="{{title}}" class="form-control title-field" data-titleNumber="{{@key}}" placeholder="Url title" data-for="title"/>

        <div class="multi-url-container">

            {{#each url}}
                <div class="multi-url-wrapper">
                    <input type="text" value="{{this}}" data-textNumber="{{@key}}" class="form-control url-field" data-for="url" placeholder="http://"/>

                    {{#if @first}}
                        <span class="glyphicon glyphicon-plus hover add-single-url" ></span>
                    {{else}}
                        <span class="glyphicon glyphicon-remove text-danger remove-single hover" ></span>
                    {{/if}}

                </div>
            {{else}}
                <div class="multi-url-wrapper">
                    <input type="text" value="" data-textNumber="{{@key}}" class="form-control url-field" data-for="url" placeholder="http://"/><span class="glyphicon glyphicon-plus hover add-single-url" ></span>
                </div>
            {{/each}}

        </div>

        <textarea class="form-control text-field">{{text}}</textarea>
        <button type="button" class="btn btn-danger delete">Delete</button>
    </div>

    <div class="right-container">
        <span class="glyphicon glyphicon-chevron-up change-order move-up" aria-hidden="true" data-move="up"></span>
        <span class="glyphicon glyphicon-chevron-down change-order move-down" aria-hidden="true" data-move="down"></span>
    </div>
    
</div>
