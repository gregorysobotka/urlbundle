<div id="bundle-container">

    <label>Name / short description</label>
    <p><input type="text" value="{{bundleName}}" class="form-control title-field" id="bundleName"/></p> </br>

    <form>
        <div id="bundle-list">

            {{#each bundleUrls}}
                <label>url w/ details</label>
                <div class="form-group bundle-group clearfix" id="bundle-id-{{@key}}">

                     <div class="left-container">
                         <input type="text" value="{{title}}" class="form-control title-field" data-titleNumber="{{@key}}" placeholder="Url title" data-for="title"/>
                         <input type="text" value="{{url}}" data-textNumber="{{@key}}" class="form-control url-field" data-for="url"/>
                         <textarea class="form-control text-field">{{text}}</textarea>
                         <button type="button" class="btn btn-danger delete">Delete</button>
                     </div>

                    <div class="right-container">
                        <span class="glyphicon glyphicon-chevron-up change-order move-up" aria-hidden="true" data-move="up"></span>
                        <span class="glyphicon glyphicon-chevron-down change-order move-down" aria-hidden="true" data-move="down"></span>
                    </div>

                </div>

            {{else}}

                <p>No urls present</p>

            {{/each}}

        </div>
    </form>

    <div class="form-group button-actions">
        <button class="btn btn-primary form-control" id="add-url">Add entry</button>
        <button class="btn btn-primary form-control" id="update-url">Update</button>
    </div>

</div>



